            <RadioButton
                android:id="@+id/question6B"
                style="@style/RadioTheme"
                android:text="@string/question_6_answer_b" />

            <RadioButton
                android:id="@+id/question6C"
                style="@style/RadioTheme"
                android:text="@string/question_6_answer_c" />

            <RadioButton
                android:id="@+id/question6D"
                style="@style/RadioTheme"
                android:text="@string/question_6_answer_d" />

        </RadioGroup>

