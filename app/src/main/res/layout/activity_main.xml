<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shield"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/question1"
            style="@style/QuestionTheme"
            android:text="@string/question_1" />

        <CheckBox
            android:id="@+id/question1A"
            style="@style/CheckBoxTheme"
            android:text="@string/question_1_answer_a" />

        <CheckBox
            android:id="@+id/question1B"
            style="@style/CheckBoxTheme"
            android:text="@string/question_1_answer_b" />

        <CheckBox
            android:id="@+id/question1C"
            style="@style/CheckBoxTheme"
            android:text="@string/question_1_answer_c" />

        <CheckBox
            android:id="@+id/question1D"
            style="@style/CheckBoxTheme"
            android:text="@string/question_1_answer_d" />

        <TextView
            android:id="@+id/question2"
            style="@style/QuestionTheme"
            android:text="@string/question_2" />

        <CheckBox
            android:id="@+id/question2A"
            style="@style/CheckBoxTheme"
            android:text="@string/question_2_answer_a" />

        <CheckBox
            android:id="@+id/question2B"
            style="@style/CheckBoxTheme"
            android:text="@string/question_2_answer_b" />

        <CheckBox
            android:id="@+id/question2C"
            style="@style/CheckBoxTheme"
            android:text="@string/question_2_answer_c" />

        <CheckBox
            android:id="@+id/question2D"
            style="@style/CheckBoxTheme"
            android:text="@string/question_2_answer_d" />

        <TextView
            android:id="@+id/question3"
            style="@style/QuestionTheme"
            android:text="@string/question_3" />

        <CheckBox
            android:id="@+id/question3A"
            style="@style/CheckBoxTheme"
            android:text="@string/question_3_answer_a" />

        <CheckBox
            android:id="@+id/question3B"
            style="@style/CheckBoxTheme"
            android:text="@string/question_3_answer_b" />

        <CheckBox
            android:id="@+id/question3C"
            style="@style/CheckBoxTheme"
            android:text="@string/question_3_answer_c" />

        <CheckBox
            android:id="@+id/question3D"
            style="@style/CheckBoxTheme"
            android:text="@string/question_3_answer_d" />

        <TextView
            android:id="@+id/question4"
            style="@style/QuestionTheme"
            android:text="@string/question_4" />

        <RadioGroup style="@style/RadioTheme">

            <RadioButton
                android:id="@+id/question4A"
                style="@style/RadioTheme"
                android:text="@string/question_4_answer_a" />

            <RadioButton
                android:id="@+id/question4B"
                style="@style/RadioTheme"
                android:text="@string/question_4_answer_b" />

            <RadioButton
                android:id="@+id/question4C"
                style="@style/RadioTheme"
                android:text="@string/question_4_answer_c" />

            <RadioButton
                android:id="@+id/question4D"
                style="@style/RadioTheme"
                android:text="@string/question_4_answer_d" />

        </RadioGroup>

        <TextView
            android:id="@+id/question5"
            style="@style/QuestionTheme"
            android:text="@string/question_5" />

        <RadioGroup style="@style/RadioTheme">

            <RadioButton
                android:id="@+id/question5A"
                style="@style/RadioTheme"
                android:text="@string/question_5_answer_a" />

            <RadioButton
                android:id="@+id/question5B"
                style="@style/RadioTheme"
                android:text="@string/question_5_answer_b" />

            <RadioButton
                android:id="@+id/question5C"
                style="@style/RadioTheme"
                android:text="@string/question_5_answer_c" />

            <RadioButton
                android:id="@+id/question5D"
                style="@style/RadioTheme"
                android:text="@string/question_5_answer_d" />

        </RadioGroup>

