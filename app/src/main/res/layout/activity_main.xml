        <TextView
            android:id="@+id/question9"
            style="@style/QuestionTheme"
            android:text="@string/question_9" />

        <EditText
            android:id="@+id/question9Answer"
            style="@style/EditTextTheme"
            android:text="@string/type_answer_here" />

        <TextView
            android:id="@+id/question10"
            style="@style/QuestionTheme"
            android:text="@string/question_10" />

        <Spinner
            android:id="@+id/question10Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <Button
            android:id="@+id/doneButton"
            style="@style/DoneButtonTheme"
            android:background="@drawable/my_button_background"
            android:onClick="checkScore"
            android:text="@string/button_text" />

    </LinearLayout>

</ScrollView>